<?xml version="1.0"?>
<ruleset name="PHP_CodeSniffer">
	<description>PHP sniffs for PHP 5.2 compatibility.</description>

	<file>disable-emails.php</file>
	<file>views/requires-admin-notice.php</file>
	<file>views/requires-plugin-notice.php</file>
	<file>includes/class.Requires.php</file>

	<arg name="basepath" value="." />
	<arg name="colors" />
	<arg name="extensions" value="php" />
	<arg name="tab-width" value="4" />

	<config name="testVersion" value="5.2-"/>

	<rule ref="PHPCompatibility" />
	<rule ref="Generic.PHP.DisallowShortOpenTag" />

</ruleset>
